# ================================
# RASA Core Configuration
# ================================
RASA_HOST=localhost
RASA_PORT=5005
RASA_SSL_ENABLED=false

RASA_SSL_CERTIFICATE=path/to/certificate.pem
RASA_SSL_KEY=path/to/key.pem
# ================================
# Database Configuration (PostgreSQL)
# ================================
DB_ENGINE=postgresql
DB_HOST=localhost
DB_PORT=5432
DB_NAME=postgres
DB_USER=postgres
DB_PASSWORD=botn4no

# SQLAlchemy-style database URL (used by Rasa tracker store)
TRACKER_STORE_DIALECT=postgresql
TRACKER_STORE_TYPE=sql
TRACKER_STORE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}
TRACKER_STORE_DB=${DB_NAME}
TRACKER_STORE_LOGIN_DB=postgres
TRACKER_STORE_USERNAME=${DB_USER}
TRACKER_STORE_PASSWORD=${DB_PASSWORD}

# ================================
# API Keys and Service Credentials
# ================================
API_KEY=http://localhost:5055/webhook
# WEATHER_API_KEY=your_weather_api_key

# ================================
# Rasa Enterprise Configuration
# ================================
RASA_ENTERPRISE_URL=http://localhost:5002/api
# RASA_ENTERPRISE_TOKEN=your_enterprise_token

# ================================
# Custom Environment Variables
# ================================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=DEBUG

# ================================
# Action Server Configuration
# ================================
ACTION_SERVER_PORT=5055
ACTION_SERVER_ENABLED=true
